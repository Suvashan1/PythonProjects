                       
<LoginScreen>:                    #Inside root widget 
    GridLayout:         #Invisible widget 
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: "User Login"
            TextInput:
                hint_text: "Username"
            TextInput:
                hint_text: "Password"
            Button:
                text: "Login"
        GridLayout:
            cols: 2
            Button: 
                text: "Forgot Password"
            Button:
                text:"Sign up"
                on_press: root.sign_up()

#   SignUpScreen will be next for user to input details
<SignUpScreen>:
    GridLayout:
        cols: 1
        Label: 
            text: "Sign up"
        TextInput:
            id: username
            hint_text: "New Username"
        TextInput:
            id: password
            hint_text: "New Password"
        Button:
            text: "Submit"
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)


<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "signup_screen"